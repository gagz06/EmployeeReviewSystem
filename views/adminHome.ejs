<h2>
    <center>
        Admin Panel
    </center>
</h2>

<div id="adminHomeContainer">

    <div  style="display: flex;">
        <div id="usersDiv" style=" padding: 5px; flex: 1; border: solid;">
            <p>
                <h1 style="text-align: center;">Select Employee for feedback</h1>
            </p>
            <ul style="list-style: none; height: 350px; overflow-y: auto;">
                <% for(employee of employeeList) {%>
                <li style="padding: 5px;">
                    <div style="padding: 10px; text-align: center;">
                        <h3><label> <%=employee.name%></label></h3>
                        <strong><a href="/manageReview/<%=employee.id%>">Manage Review</a></strong>
                        <strong><a href="/manageUser/<%=employee.id%>">Manage User</a></strong>
                        <strong><a href="/feedback-form/<%=employee.id%>">Submit Feedback</a></strong>
                    </div>
                </li>
                <%}%>
            </ul>
        </div>
        <div style=" padding-left: 10px; flex: 1; border: solid;">
            <h1 style="text-align: center;">Add New User</h1>
            <form style="padding:0px 0px 10px 10px;" action="/employee/create" method="post">
                <table id="tbl-add-emp">
                    <tr>
                        <td><label><strong>Name:</strong></label></td>
                        <td><input type="text" name="name" placeholder="Your name" required><br /></td>
                    </tr>
                    <tr>
                        <td>
                            <label><strong>Email:</strong></label>
                        </td>
                        <td>
                            <input type="email" name="email" placeholder="Your email" required><br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label><strong>Password</strong></label>
                        </td>
                        <td>
                            <input type="password" name="password" placeholder="Password" required><br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label><strong>Confirm Password </strong></label>
                        </td>
                        <td>
                            <input type="password" name="confirm_password" placeholder="Confirm Password" required><br />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" id="btnSubmit" value="Add Employee">
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
